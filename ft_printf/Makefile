NAME = libftprintf.a
LIBFT = $(LIBFTDIR)/libft.a

# Compilation
CC = gcc
CFLAGS = -Wall -Werror -Wextra

# Files
SRC = ft_printf.c\
flagsequence.c\
flagsequence_utils.c\
conversion.c\
conversion_utils.c\
convert_character.c\
convert_string.c\
convert_pointer.c\
convert_digit.c\
convert_unsigned_digit.c\
convert_hex.c\
ft_round_f.c\
convert_n.c\
convert_f.c\
ft_dtoa_f.c\
convert_e.c\
ft_dtoa_e.c
OBJ = $(SRC:.c=.o)

# Directories
LIBFTDIR = libft

.PHONY: all
all:
	@$(MAKE) -C $(LIBFTDIR)
	@$(MAKE) $(NAME)

$(NAME): $(LIBFT) $(OBJ)
	cp $(LIBFT) $(NAME)
	ar rcs $(NAME) $(OBJ)
%.o: %.c
	$(CC) -o $@ -c $(CFLAGS) $<
$(LIBFT):
	$(MAKE) -C $(LIBFTDIR)

.PHONY: clean fclean re bonus
clean:
	$(MAKE) clean -C $(LIBFTDIR)
	rm -f $(OBJ)
fclean:
	$(MAKE) clean
	$(MAKE) fclean -C $(LIBFTDIR)
	rm -f $(NAME)
re:
	$(MAKE) fclean
	$(MAKE) all

bonus:
	@$(MAKE) all
